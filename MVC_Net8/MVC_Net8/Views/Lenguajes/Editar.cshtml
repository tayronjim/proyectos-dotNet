@model MVC_Net8.Models.Lenguajes
@{
    ViewData["Title"] = "Nuevo";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Lista Lenguajes</h2>
        <form asp-action="Editar" asp-controller="Lenguajes" method="post">
             <input type="hidden" asp-for="id">
            <div class="mb-3">
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control" asp-for="nombre">
            </div>

            <div class="mb-3">
                <label for="fecha">Fecha</label>
                <input type="date" class="form-control" asp-for="fecha">
            </div>

            <div class="mb-3">
                <label for="nivel">Nivel</label>
                <input type="number" class="form-control" asp-for="nivel" min="0" max="5">
            </div>

            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Lenguajes" asp-action="Listado" class="btn btn-warning">Volver</a>
            </div>
        </form>
    </div>
</div>